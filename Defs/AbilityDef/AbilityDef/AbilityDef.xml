<Defs>

	<AbilityDef>
		<defName>GW_SM_CastellanShot</defName>
		<label>Castellan Shot</label>
		<description>shooty.</description>
		<iconPath>Things/Weapons/Castellan_Axe</iconPath>
		<aiCanUse>true</aiCanUse>
		<ai_IsIncendiary>false</ai_IsIncendiary>
		<showOnCharacterCard>false</showOnCharacterCard>
		<verbProperties>
			<verbClass>Verb_CastAbility</verbClass>
			<requireLineOfSight>true</requireLineOfSight>
			<range>9.9</range>
			<warmupTime>0.5</warmupTime>
			<soundCast>Shot_AssaultRifle</soundCast>
			<targetParams>
				<canTargetLocations>false</canTargetLocations>
			</targetParams>
		</verbProperties>
		<comps>
			<li Class="CompAbilityBurstProjectiles.CompProperties_BurstShot">
                <!-- choose one of the two. either using a single projectileDef for single type of bullet 
            or using projectileList, if using projectileList. it will random the bullet from the list when firing -->
                <projectileDef>GW_TotE_Bolt_Castellan_Axe</projectileDef>
                <!-- <projectileList> -->
                    <!-- <li>PiercingSpine</li> -->
                    <!-- <li>Bullet</li> -->
                    <!-- <li>Arrow</li> -->
                <!-- </projectileList> -->
                <burstCount>6</burstCount>
                <tickBetweenShot>30</tickBetweenShot>
                <shotSound>Shot_AssaultRifle</shotSound>
            </li>
		</comps>
	</AbilityDef>
	
