	<ThingDef Name="GW_TotEBaseShield" ParentName="BaseMeleeWeapon_Blunt_Quality" Abstract="True">
        <techLevel>Spacer</techLevel>
        <thingCategories Inherit="False">
            <li>GW_TotE_Shields</li>
        </thingCategories>
        <equippedStatOffsets>
            <ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
            <MeleeHitChance>-2</MeleeHitChance>
            <MeleeDodgeChance>-5</MeleeDodgeChance>
        </equippedStatOffsets>
		<thingClass>VFECore.Apparel_Shield</thingClass>
		<apparel>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<bodyPartGroups>
				<li>LeftHand</li>
			</bodyPartGroups>
			<layers>
				<li>VFEC_OuterShell</li>
			</layers>
		<countsAsClothingForNudity>false</countsAsClothingForNudity>
		<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
        <comps>
            <li>
                <compClass>CompColorable</compClass>
            </li>
        </comps>
        <equippedAngleOffset>-30</equippedAngleOffset>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <tools>
            <li>
                <label>base</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>centre</label>
                <labelUsedInLogging>false</labelUsedInLogging>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
    </ThingDef>
