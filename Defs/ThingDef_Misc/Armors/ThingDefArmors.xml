			<Steel>900</Steel>
			<Uranium>190</Uranium>
			<HP_Ceramite>400</HP_Ceramite>
			<HP_Adamantium>300</HP_Adamantium>
			<HP_Auramite>100</HP_Auramite>
		</costList>
		<apparel>
			<drawData>
				<dataNorth>
					<!-- <offset>(0,-0.2,0)</offset> -->
					<layer>71</layer>
				</dataNorth>
				<dataWest>
					<layer>70</layer>
				</dataWest>
				<dataEast>
					<layer>70</layer>
				</dataEast>
			</drawData>
			<layers>
				<li>Backpack</li>
			</layers>
			<wornGraphicPath>Things/CustodesArmors/Custodes/Custodes</wornGraphicPath>
			<tags>
				<li>GW_Custodes</li>
			</tags>
		</apparel>
		<comps>
			<li Class="GW4KArmor.CompProperties_TriColorMask">
                <maskCount>1</maskCount>
                <palettePresets>GW_SM_TorsoChapterPalettes</palettePresets>
                <defaultPalette>
                    <colorA>(250, 176, 67)</colorA>
					<colorB>(250, 176, 67)</colorB>
					<colorC>(180, 65, 74)</colorC>
                </defaultPalette>
           	 </li>
        </comps>
    </ThingDef>	
	
