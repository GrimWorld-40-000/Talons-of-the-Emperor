<Defs>
	<ApparelLayerDef>
		<defName>GW_Shoulder</defName>
		<label>shoulder</label>
		<drawOrder>550</drawOrder>
	</ApparelLayerDef>
	
	<ThingCategoryDef>
		<defName>GW_ArmorShoulderPad</defName>
		<label>shoulder pads</label>
		<parent>ApparelArmor</parent>
	</ThingCategoryDef>
	
	<ThingDef Abstract="true" Name="GW_TalonOfTheEmperor_ShoulderBase" ParentName="ArmorMachineableBase">
		<techLevel>Spacer</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<skillRequirements>
				<Crafting>20</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="false">
				<li>GW_SM_TalonOfTheEmperor_ArmorBench</li>
			</recipeUsers>
		</recipeMaker>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>1</drawSize>
		</graphicData>
		<uiIconScale>1.6</uiIconScale>
		<equippedStatOffsets>
			<Beauty>50</Beauty>
		</equippedStatOffsets>
		<thingCategories>
			<li>GW_ArmorShoulderPad</li>
		</thingCategories>
		<apparel>
			<drawData>
				<defaultData>
					<layer>69</layer> <!--70-77 is over helmet and under gun-->
				</defaultData>
				<dataNorth>
					<offset>(0,0,-0.2)</offset>
				</dataNorth>
				<dataSouth>
					<offset>(0,0,-0.2)</offset>
				</dataSouth>
				<dataEast>
					<offset>(0,0,-0.2)</offset>
					<layer>70</layer>
				</dataEast>
				<dataWest>
					<offset>(0,0,-0.2)</offset>
					<layer>70</layer>
				</dataWest>
                <scale>0.8</scale>
                <childScale>0.8</childScale>
            </drawData>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li MayRequire="ceteam.combatextended">Hands</li>
			</bodyPartGroups>
			<layers>
				<li>GW_Shoulder</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<modExtensions>
			<li Class="CombatExtended.PartialArmorExt" MayRequire="ceteam.combatextended">
				<stats>
					<li>
						<ArmorRating_Sharp>0.8</ArmorRating_Sharp>
						<parts>
							<li>Hand</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Blunt>0.8</ArmorRating_Blunt>
						<parts>
							<li>Hand</li>
						</parts>
					</li>
				</stats>
			</li>
			<li Class="VFECore.ApparelDrawPosExtension">
				<isUnifiedApparel>true</isUnifiedApparel>
				<hideHead>false</hideHead>
			</li>
		</modExtensions>
	</ThingDef>
	
	<ThingDef ParentName="GW_TalonOfTheEmperor_ShoulderBase">
		<defName>GW_TotE_CustodesShoulder</defName>
		<label>Custodes shoulder pads</label>
		<description>The Imperial Regent Shoulderpads in Warhammer 40,000 are iconic components of the power armor worn by elite soldiers in the service of the Imperium. Crafted with a combination of durable materials and intricate design, these shoulderpads serve both functional and symbolic purposes on the battlefield.\n\nThe left shoulderpad often bears the chapter's symbol, while the right may display personal or campaign-specific markings.</description>
		<graphicData>
			<texPath>Things/Apparels/CustodesArmors/Custodes/CustodesShoulder_south</texPath>
		</graphicData>
		<recipeMaker>
            <researchPrerequisite>GW_TotE_Custodes</researchPrerequisite>
        </recipeMaker>
		<statBases>
			<WorkToMake>70000</WorkToMake>
			<MaxHitPoints>1900</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>0.0</Flammability>
			<ArmorRating_Sharp>0.65</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.45</ArmorRating_Blunt>
			<ArmorRating_Heat>0.5</ArmorRating_Heat>
			<Insulation_Cold>10</Insulation_Cold>
			<Insulation_Heat>10</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<SocialImpact>2.00</SocialImpact>
		</equippedStatOffsets>
		<costList>
			<ComponentSpacer>25</ComponentSpacer>
			<ComponentIndustrial>37</ComponentIndustrial>
			<GW_ComponentRelic>3</GW_ComponentRelic>
			<Plasteel>450</Plasteel>
			<Steel>750</Steel>
			<Uranium>190</Uranium>
			<HP_Ceramite>310</HP_Ceramite>
			<HP_Adamantium>220</HP_Adamantium>
			<HP_Auramite>80</HP_Auramite>
		</costList>
		<apparel>
			<wornGraphicPath>Things/Apparels/CustodesArmors/Custodes/CustodesShoulder</wornGraphicPath>
			<tags>
				<li>GW_Custodes</li>
			</tags>
		</apparel>
		<comps>
			<li Class="GW4KArmor.CompProperties_TriColorMask">
				<maskCount>1</maskCount>
				<palettePresets>GW_SM_ShoulderChapterPalettes</palettePresets>
				<defaultPalette>
					<colorA>(250, 176, 67)</colorA>
					<colorB>(250, 176, 67)</colorB>
					<colorC>(180, 65, 74)</colorC>
				</defaultPalette>
			</li>
		</comps>
	</ThingDef>
	
