<?xml version="1.0" encoding="utf-8"?>
<Defs>

	
	<!--===== Bike Main Turret =====-->
	
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>GW_DawnEagleBike_Main</defName>
		<label>Hurricane Bolter</label>
		<description>A fixed, front-mounted hurricane bolter. Fires 0.998 cal bolts.</description>
		<turretType>Rotatable</turretType>
		<shotSound>GW_Heavy_Bolt_Gun_Sound</shotSound>
		<projectile>GW_Bullet_HeavyBolter</projectile>
		<reloadTimer>7.8</reloadTimer>
		<warmUpTimer>1.0</warmUpTimer>
		<magazineCapacity>600</magazineCapacity>
		<chargePerAmmoCount>2</chargePerAmmoCount>
		<genericAmmo>true</genericAmmo>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<projectileOffset>1.0</projectileOffset>
		<maxRange>28.9</maxRange>
		<attachProjectileFlag>GW_Tank</attachProjectileFlag>
		<fireModes>
			<li>
				<shotsPerBurst>15</shotsPerBurst>
				<ticksBetweenShots>1</ticksBetweenShots>
				<ticksBetweenBursts>30</ticksBetweenBursts>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
				<accuracyTouch>.85</accuracyTouch>
      			<accuracyShort>0.95</accuracyShort>
      			<accuracyMedium>0.66</accuracyMedium>
      			<accuracyLong>0.30</accuracyLong>
			</li>
			<li>
				<shotsPerBurst>30</shotsPerBurst>
				<ticksBetweenShots>1</ticksBetweenShots>
				<ticksBetweenBursts>30</ticksBetweenBursts>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
				<accuracyTouch>.65</accuracyTouch>
      			<accuracyShort>0.75</accuracyShort>
      			<accuracyMedium>0.60</accuracyMedium>
      			<accuracyLong>0.25</accuracyLong>
			</li>
			<li>
				<shotsPerBurst>60</shotsPerBurst>
				<ticksBetweenShots>1</ticksBetweenShots>
				<ticksBetweenBursts>45</ticksBetweenBursts>
				<label>Auto</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
				<accuracyTouch>.7</accuracyTouch>
      			<accuracyShort>0.60</accuracyShort>
      			<accuracyMedium>0.50</accuracyMedium>
      			<accuracyLong>0.24</accuracyLong>
			</li>
		</fireModes>

		<graphicData>
			<texPath>Things/Vehicles/Chimera/Chimera_CannonSide</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(0, 0)</drawSize>
		</graphicData>

		<ammunition>
			<thingDefs>
				<li>GW_HeavyBolterNonCE</li>
			</thingDefs>
		</ammunition>
	</Vehicles.VehicleTurretDef>

</Defs>
